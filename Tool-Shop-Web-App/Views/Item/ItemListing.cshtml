<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Item Listing</title>
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/datatables.min.css">
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/datatables.js"></script>
</head>
<body>
    <div>
        <table id="itemTable" class="display">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>SerNo</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>IsFreezed</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1 ;}
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        <td style="display:none">@row["Id"]</td>
                        <td>@i</td>
                        <td>@row["Code"]</td>
                        <td>@row["Name"]</td>
                        <td>@row["Category"]</td>
                        <td>@row["Price"]</td>
                        <td>
                            <input type="checkbox" @(row["IsFreezed"] != DBNull.Value && (bool)row["IsFreezed"] ? "checked" : "") disabled />
                        </td>
                        <td>
                            <a class="accordion-button" href="/Item/ItemForm?id=@row["Id"]">Edit</a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready(function() {
            $('#itemTable').DataTable();
        });
    </script>
</body>
</html>
